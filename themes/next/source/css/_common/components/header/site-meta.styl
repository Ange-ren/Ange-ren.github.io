.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { text-align: center; }
}

.brand {
  //color: #ffb6c1 !important; //后加入的 ,这里修改brand，也就是宵晓咲标题
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: $brand-color;  //原来的
  background: $brand-bg;
  border-bottom: none;
  &:hover { color: $brand-hover-color; }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: $logo-font-size;
  font-weight: normal;
  font-family: $font-family-logo;
}

.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  //color: $subtitle-color;  //原来的
  color: $brand-color; //修改副标题颜色
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}

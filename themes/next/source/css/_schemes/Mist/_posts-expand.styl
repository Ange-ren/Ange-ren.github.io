// Post Expand
// --------------------------------------------------
.posts-expand .home {
  .post-title, .post-meta {
    text-align: $site-meta-text-align;

    +mobile() {
      text-align: center;
    }
  }

  .post-meta {
    margin: 5px 0 20px 0;
  }
}

.posts-expand {
  padding-top: 0;

  .post-eof {
    display: none;
  }

  .post-block:not(:first-child) {
    margin-top: 120px;
  }

  .post-title, .post-meta {
    text-align: center;
  }

  .post-title-link::before {
    background: $black-deep;
  }

  .post-body img {
    //margin-left: 0;
	margin: auto;
  }

  .post-tags {
    text-align: left;

    a {
      background: $whitesmoke;
      border-bottom: none;
      padding: 1px 5px;

      &:hover {
        background: $grey-light;
      }
    }
  }

  .post-nav {
    margin-top: 40px;
  }
}

.post-button {
  margin-top: 20px;
  text-align: left;

  .btn {
    // color: $grey-dim;
    background: none;
    border: 0;
    border-bottom: 2px solid $grey-dim;
    font-size: $font-size-small;
    padding: 0;
    transition-property: border;

    &:hover {
      border-bottom-color: $black-deep;
    }
  }
}
.post-body .note.primary {
    background-color: #f5f0fa;
    border-left-color: #6f42c1;
}
.post-body .note {
    position: relative;
    padding: 15px;
    margin-bottom: 20px;
    border: initial;
    border-left: 3px solid #eee;
    background-color: #f9f9f9;
    border-radius: 10px;
}

.a{
  text-decoration:none;
  outline-width:0;
  color:#5073b8;
  outline: none;
}


